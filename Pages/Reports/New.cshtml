}

Add New Report

<div class="mt-5">
    <form method="post">
	<span asp-validation-for="newReport.Title" class="text-danger"></span>        
        <div class="form-group">
            <label asp-for="newReport.Title" class="col-form-label">Title</label>
            <input asp-for="newReport.Title" class="col-form-cotrol" />
        </div>

	<span asp-validation-for="newReport.Content" class="text-danger"></span>        
        <div class="form-group">
            <label asp-for="newReport.Content" class="col-form-label">Content</label>
            <textarea asp-for="newReport.Content" class="form-cotrol" /></textarea>
        </div>

	<span asp-validation-for="newReport.Category" class="text-danger"></span>        
        <div class="form-group">
            <label asp-for="newReport.Category" class="col-form-label">News type</label>
            <select class="col-form-control" asp-for="newReport.Category" asp-items="Html.GetEnumSelectList<NewModel.CategoryType>()">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>

        <div class="form-group">
            <input type="hidden" asp-for="newReport.CreatedBy" class-"form-cotrol" value="@UserManager.GetUserId(User)"/>
        </div>


        <div class="form-group">
	    <label asp-for="newReport.Category" class="col-form-label">News type</label>        
            <input class="col-form-control" asp-for="newReport.IsPublished" />
        </div>


	<div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        
    </form>

</div>

