@page
@model RapidNewsReportWebApp.Pages.Reports.EditModel
@{
}

<div class="mt-5">

    <div id="logobar" align="center">

        <img src="../images/WorldNews.jpg" alt="Sample Photo" height="20" />
        <img src="../images/LocalNews.jpg" alt="Sample Photo" height="20" />
        <img src="../images/Sport.jpg" alt="Sample Photo" height="20" />
        <img src="../images/Opinion.jpg" alt="Sample Photo" height="20" />
        <img src="../images/Entertainment.jpg" alt="Sample Photo" height="20" />
        <img src="../images/FoodDrink.jpg" alt="Sample Photo" height="20" />
        <img src="../images/Politics.jpg" alt="Sample Photo" height="20" />
        <img src="../images/Weather.jpg" alt="Sample Photo" height="20" />
        <p><hr></p>

    </div>

    @if (Model.errorRMessage.Length > 0)
    {
        <div class="alert alert-warning" role="alert">@Model.errorRMessage</div>
    }

    <h1>Update News Report</h1>

    <hr />

 
    <form method="post">

        <span asp-validation-for="@Model.myReport.Title" class="text-danger"></span>
        <div class="mb-3">
            <label asp-for="myReport.Title" class="form-label">Report Title</label>
            <input asp-for="myReport.Title" class="form-control" value="@Model.myReport.Title">
        </div>


        <span asp-validation-for="@Model.myReport.Content" class="text-danger"></span>
        <div class="mb-3">
            <label asp-for="myReport.Content" class="form-label">News Report</label>
            <textarea asp-for="myReport.Content" class="form-control" rows="3" value="@Model.myReport.Content"></textarea>
        </div>


        <span asp-validation-for="@Model.myReport.Category" class="text-danger"></span>
        <div class="mb-3">
            <label asp-for="myReport.Category" class="form-label">Select Category</label>
            <select class="col-form-control form-select myselect" asp-for="myReport.Category" asp-items="Html.GetEnumSelectList<EditModel.CategoryType>()">
            </select>
        </div>



        @if (!Model.myReport.IsPublished)
        {
            <div class="mb-3">
                <label asp-for="@Model.myReport.IsPublished" class="form-label">Publish Now    </label>
                <input class="form-check-input" asp-for="@Model.myReport.IsPublished" />
            </div>
        }
        else
        {
            <div class="form-group"><input type="hidden" value="true" asp-for="@Model.myReport.IsPublished"></div>
        }

        <div class="form-group"><input type="hidden" asp-for="@Model.myReport.Id" class-"form-cotrol" value="@Model.myReport.Id" /></div>


        <div class="form-group row"><input type="submit" value="Update News Report" class="btn btnstyle2 btn-edit" /></div>

    </form>
</div>
